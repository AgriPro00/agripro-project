<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="-40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textProduct"
            app:layout_constraintTop_toTopOf="@id/imageProduct"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/imageProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Product Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textUnit"
            android:layout_width="91dp"
            android:layout_height="26dp"
            android:layout_marginStart="5dp"
            android:text="Product Unit"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/textProduct"
            app:layout_constraintTop_toTopOf="@id/imageProduct" />

        <TextView
            android:id="@+id/textCategory"
            app:layout_constraintTop_toBottomOf="@id/textProduct"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/imageProduct"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Product Category"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textPrice"
            app:layout_constraintTop_toBottomOf="@id/textCategory"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/imageProduct"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Product Price"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/textPrice"
            app:layout_constraintLeft_toRightOf="@id/imageProduct"
            android:background="@drawable/btn_edit" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Remove"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/textPrice"
            app:layout_constraintLeft_toRightOf="@id/editButton"
            android:layout_marginStart="40dp"
            android:background="@drawable/btn_remove" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>