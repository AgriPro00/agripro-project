<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatBotFragment"
    android:background="@color/black2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="700dp">

        <ImageView
            android:id="@+id/imageBot"
            android:layout_width="90dp"
            android:layout_height="110dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_agribot"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomChat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/box_chat_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/chatMessage"
            android:layout_width="280dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toTopOf="@id/bottomChat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="-20dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:hint="Send message..."
            android:background="@drawable/box_chatbot"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sendMessage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toEndOf="@+id/chatMessage"
            app:layout_constraintBottom_toTopOf="@id/bottomChat"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/box_send_chat">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_send"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            app:layout_constraintTop_toBottomOf="@+id/imageBot"
            tools:layout_editor_absoluteY="131dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>